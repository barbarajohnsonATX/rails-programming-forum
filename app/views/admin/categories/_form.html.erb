<%= form_for([:admin, @category]) do |f|%>
    <%= render partial: 'layouts/errors', locals: {object:  @category} %>

    <div class="form-group">
        <%= f.label :name%> <br/>
        <%= f.text_field :name, class: "form-control" %> <br/>
    </div>

    <br/>
  
    <%= f.submit submit_text, class: 'btn btn-success' %>
 
<% end %>