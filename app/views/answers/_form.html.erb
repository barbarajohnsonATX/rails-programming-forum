 <p>Add a comment: </p>

 <%= form_for ([@question, @question.answers.build]) do |f| %>

    <div class="form-group">
        <%= f.label :comment  %>
        <%= f.text_area :comment, :rows => 5, class: "form-control" %>
    </div>

    <%= f.button :submit, class: 'btn btn-success' %>
  <% end %>
 
 