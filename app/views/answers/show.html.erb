<div class="col-md-10 col-md-offset-1">

<p> Question: <%= @answer.question.title %> </p>
<p> Description: <%= @answer.question.description %> </p>
<p> Asked by: <%= @answer.question.user.username %> <%= time_ago_in_words(@question.created_at) %> ago.</p>

<% if logged_in? %>
 <%= render 'form', answer: @answer, submit_text: "Edit"%> <br/>



     <% if @answer.user_id == current_user.id %>
     <%= link_to "Delete", question_answer_path(@question, @answer), class: "btn btn-warning" , method: :delete, data: { confirm: "Are you sure?" } %>
     <% end %>
<% end %>

</div>

 