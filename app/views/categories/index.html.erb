<div class="col-md-10 col-md-offset-1">

<h3>Categories</h3>

 
<ul>

 <% @categories.each do |c| %>
    
    <li><%= link_to c.name, category_path(c) %></li>
<% end %> 
</ul>
 

<% if current_user.admin %>
<div class="btn btn-info btn-xs">
    <%= link_to "Add a new category", new_category_path, class:"btn" %>
</div>


<% end %> 

</div>