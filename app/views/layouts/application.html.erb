
<!DOCTYPE html>
<html>
  <head>
    <title>Programming Forum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>

    <nav class="navbar navbar-default">
      <div class="container-fluid">

        <div class="navbar-header">
          <a class="navbar-brand" href="/">Programming Forum</a>
        </div>
        
        <ul class = "nav navbar-nav navbar-right">
          <li><%= link_to "All Questions", questions_path, class: 'navlink' %> </li>
          <li><%= link_to "All Categories", categories_path, class: 'navlink' %> </li>
          <li><%= link_to "Log Out", logout_path, method: :delete, class: 'navlink' %> </li>
        </ul>

         

      </div>
      
 
    </nav>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>
      <% end %>

    <% end %>

 

    <%= yield %>
  </body>
</html>


 
