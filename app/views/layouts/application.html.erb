
<!DOCTYPE html>
<html>
  <head>
    <title>Programming Forum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/3009bbfc69.js"></script>


  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container">

        <div class="navbar-header">
          <a class="navbar-brand" href="/">Programming Forum</a>
        </div>

          <ul class = "nav navbar-nav navbar-right">

            <% if logged_in? && current_user.admin? %>
                <li><%= link_to "Admin Panel", admin_root_path %></li>
            <% end %>

              <li><%= link_to "All Questions", questions_path, class: 'navlink' %> </li>
              <!--<li><%= link_to "All Categories", categories_path, class: 'navlink' %> </li> -->
              
              <% if logged_in? %>
                <li><%= link_to "My Stuff", user_path(current_user), class: 'navlink' %> </li>
                <li><%= link_to "Ask Question", new_question_path, class: 'navlink' %> </li>
                <li><%= link_to "Log Out", logout_path, method: :delete, class: 'navlink' %> </li>
              <% end %>
 
          </ul>
         
      </div>
      
    </nav>
     <% if logged_in? %>
      <div class="container"> Welcome, <%= current_user.username %>! </div>
     <% end %>

     <div class="container"><% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>
      <% end %>
      </div>

      
      <div class="row">
      <%= form_tag(search_path, method: :get) do %>
        <div class="form-group text-center">
            Tag <%= text_field_tag :name %>
            <button type="submit"><i class="fa fa-search", style="color:green"></i></button>
        </div>
      <% end %>


    <%= yield %>

  </body>
</html>


 
