 
<%= form_for(@question) do |f|%>
    <div class="form-group"
        <%= f.label :category_id, "Category"%> <br/>
        <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true, class: "form-control"%> <br/>
    </div>

    <div class="form-group"
        <%= f.label :title%> <br/>
        <%= f.text_field :title, class: "form-control" %> <br/>
    </div>

    <div class="form-group"
        <%= f.label :description%> <br/>
        <%= f.text_area :description, :rows => 5, class: "form-control" %> <br/>
    </div>

    <br/>
  
    <%= f.submit "Ask Question", class: 'btn btn-success' %>
 
<% end %>
 