<h1>Questions#index</h1>

<% if @questions %>
    <% @questions.each do |q| %>
        <%= q.category.name %>
        <ul>
        <% q.category.questions.each do |q| %>
            <li><%= link_to q.title, question_path(q) %> by <%= q.user.username %>  </li>
 
        <% end %>
        </ul>
    <% end %>
<% end %>

 

