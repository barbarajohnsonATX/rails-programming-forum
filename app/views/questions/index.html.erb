<div class="col-md-10 col-md-offset-1">
    <h2>Questions</h2>

    <% if @questions_today.any? %>
        <h4>New today </h4>
            <ul>
                <% @questions_today.each do |q| %>
                    <li><%= link_to q.title, question_path(q) %> by <%= q.user.username %> </li>
                <% end %>  
            </ul>
    <% end %>


    <% if @questions_unanswered.any? %>
        <h4>Unanswered questions </h4>
            <ul>
                <% @questions_unanswered.each do |q| %>
                    <li><%= link_to q.title, question_path(q) %> by <%= q.user.username %> </li>
                <% end %>  
            </ul>
    <% end %>  


     <% if @questions %>
        <% @categories.each do |c| %>
            <%= c.name %> 
            <ul>
                <% if c.questions.any? %>
                    <% c.questions.order('updated_at DESC').each do |q| %>
                        <li><%= link_to q.title, question_path(q) %> by <%= q.user.username %>  </li>  
                    <% end %>

                <% else %> 
                    No questions yet.
                <% end %>
            </ul>
        <% end %> 
    <% end %>
 

 
    <div class="btn btn-info btn-xs">
        <%= link_to 'Ask a Question', new_question_path, class: "btn" %>
    </div>

 

</div>




