<div class="col-md-10 col-md-offset-1">
 
  <%= form_tag(search_path, method: :get) do %>
    <div class="form-group">
        Tag <%= text_field_tag :name %>
        <%= submit_tag 'Search', class: 'btn btn-success' %>
    </div>

  <% end %>

    <br/>
    <br/>

    <h2>Questions</h2>

     
    <% if @questions_today.any? %>
        <h4>New today </h4>
        <%= render partial: 'question', collection: @questions_today %>
    <% end %>


    <% if @questions_unanswered.any? %>
        <h4>Unanswered questions </h4>
        <%= render partial: 'question', collection: @questions_unanswered %>
    <% end %>  


     <% if @questions.any? %>
     <h4>All questions </h4>
        <%= render partial: 'question', collection: @questions %>
    <% end %>

 

</div>




