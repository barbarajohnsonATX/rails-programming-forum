<div class="col-md-10 col-md-offset-1">
    <h2>Log in here </h2>

    <!-- Note: post to /login with controller/action = sessions#create instead of users#create -->
    <%= form_for @user, url: '/login' do |f| %>
 
        <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username %> <br/>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %> <br/><br/>
        </div>

        <%= f.submit "Log In", class: 'btn btn-success' %>
    <% end %>

</div>