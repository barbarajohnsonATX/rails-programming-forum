<h1>Log in here </h1>

<%= flash[:error] %>

<!-- Note: post to /login in sessions#create instead of users#create -->
<%= form_for @user, url: '/login' do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %> <br/>
  
    <%= f.label :password %>
    <%= f.password_field :password %> <br/><br/>
 
    <%= f.submit "Log In" %>

<% end %>