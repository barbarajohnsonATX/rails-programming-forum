     <h2>Log in here </h2>

    <!-- Add url: /login to route to sessions#create instead of users#create
         <%#= form_for @user, url: 'login' do |f| %> 
    -->
    
    <!-- if :user instead of @user, form won't be filled in if we need to render, preferred for security reasons -->
    <%= form_for :user do |f| %>

        <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username %> <br/>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %> <br/><br/>
        </div>

        <%= f.submit "Log In", class: 'btn btn-success' %>
    <% end %>

 